# Exemple de configuration pour tikiya_api
# Copie en .env et adapte.

# Server
PORT=8080
RUST_LOG=info,tikiya_api=debug

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tikiya
DATABASE_POOL_MAX=20

# JWT
JWT_SECRET=change-me-super-secret
JWT_ISSUER=tikiya-api
JWT_AUDIENCE=tikiya-clients

# Résilience HTTP (anti-crash)
HTTP_REQUEST_TIMEOUT_SECS=15
# Conseil: HTTP_CONCURRENCY_LIMIT ≈ DATABASE_POOL_MAX * 4
HTTP_CONCURRENCY_LIMIT=80
HTTP_MAX_BODY_BYTES=1048576

# Anti-bot / brute-force (rate limit par IP)
RATE_LIMIT_PER_SECOND=20
RATE_LIMIT_BURST=40

# Reverse proxy (Nginx/Traefik/Cloudflare)
# Mettre à true uniquement si tu fais confiance aux headers X-Forwarded-For
TRUST_PROXY_HEADERS=false

# HSTS (uniquement si servi en HTTPS au niveau proxy)
HTTP_HSTS=false

# Google OAuth (optionnel)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
